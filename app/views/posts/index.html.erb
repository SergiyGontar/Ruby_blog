<h1>Main page</h1>
<br>
<% @post.each do |post| %>
	<div class="card">
	  <div class="card-header">
	    <h5 class="card-title"><%= post.title %></h5>
	  </div>
	  <div class="card-body">
	    <p class="card-text"><%= post.body %></p>
	    <p class="card-text"><%= post.created_at %></p>

	    <%= link_to "Read full article...", post_path(post), :class => 'btn btn-secondary'%>
	  </div>
	</div>
	<br>
<% end %>